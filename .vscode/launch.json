{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Launch Program",
        "program": "${workspaceRoot}/app.js",
        "args": [
          "./temp/example/target/source",
          "--target", "./temp/example/target",
          "--move-to", "./temp/to-delete",
          "--silent"
        ],
        "protocol": "inspector"
      },
      {
        // https://github.com/TypeStrong/ts-node/issues/46#issuecomment-287508936
        "name": "Run mocha",
        "type": "node",
        "request": "launch",
        "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
        "stopOnEntry": false,
        "args": ["--no-timeouts"],
        "cwd": "${workspaceRoot}",
        "protocol": "inspector"
      }
    ]
  }