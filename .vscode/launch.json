{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Launch Program",
        "program": "${workspaceRoot}/app.js",
        "args": [
          "./test/example-dest",
          "--target", "./test/example-dest/example-source",
          "--dry"
        ]
      },
      {
        // https://github.com/TypeStrong/ts-node/issues/46#issuecomment-287508936
        "name": "Run mocha",
        "type": "node",
        "request": "launch",
        "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
        "stopOnEntry": false,
        "args": ["--no-timeouts"],
        "cwd": "${workspaceRoot}",
        "protocol": "inspector"
      }
    ]
  }